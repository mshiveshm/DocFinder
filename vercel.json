{
  "version": 2,
  "builds": [
    { "src": "package.json",       "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "dist/index.js",      "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/index.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)",     "dest": "/index.html" }
  ]
}